<html>
	<head><title>task master/meals</title></head>
	<link rel="stylesheet" type="text/css" href="/taskmaster/static/taskmaster.css" />
<body>
<div id="main">
<h3><a href="/taskmaster/">taskmaster</a>/meals</h3>
<h3> Comptes</h3>
<div>
	<table>
		<tr><td>Am√©lie</td><td> {{this.counts.A}}</td></tr>
		<tr><td>Lise</td><td> {{this.counts.L}}</td></tr>
		<tr><td>Maman</td><td> {{this.counts.M}}</td></tr>
		<tr><td>Paul</td><td> {{this.counts.P}}</td></tr>
		<tr><td>Commun</td><td> {{this.counts.X}}</li>
	</table>
</div>
<!--date, time, cook, eaters, food-->
<h3> Actions</h3>
<p>
	<form id="form-meal" action="/taskmaster/meals" method="post" >
		
		<ul>
			<li>
				<label for"input-date">date: </label><input type="text" id="input-date" name="date" value=""/>
				<input type="button" id="button-set-date" value="aujourd'hui" />
			</li>
			<li>
				<label for"input-time">repas: </label><input type="text" id="input-time" name="time" value="XXX"/>
				<input type="button" id="button-set-time-midi" value="midi" />
				<input type="button" id="button-set-time-soir" value="soir" />
			</li>
			<li>
				<label for"input-cook">cuisinier: </label>
				<input type="text" id="input-cook" name="cook" value="X"/>
				<input type="button" id="button-set-cook-amelie" value="A" />
				<input type="button" id="button-set-cook-lise" value="L" />
				<input type="button" id="button-set-cook-maman" value="M" />
				<input type="button" id="button-set-cook-paul" value="P" />
				<input type="button" id="button-set-cook-x" value="X" />
			</li>
			<li>
				<label for"input-eaters">convives: </label>
				<input type="text" id="input-eaters" name="eaters" value="L,M,P,A"/>
				<input type="button" id="button-set-eater-amelie" value="A" />
				<input type="button" id="button-set-eater-lise" value="L" />
				<input type="button" id="button-set-eater-maman" value="M" />
				<input type="button" id="button-set-eater-paul" value="P" />
				<input type="button" id="button-clear-eaters" value="effacer" />
			</li>
			<li><label for"input-food">menu: </label><input id="input-food" type="text" name="food" value=""/></li>
		</ul>
		<p id="input-meal-warning" style="display: none;">Fill correctly all fields before sending!</p>
		<input id="input-meal-submit" type="submit" value="add" />
	</form>
</p>
<h3> Liens</h3>
<ul>
	<li><a href="/taskmaster/meals/dump">/meals/dump</a></li>
</ul>
<h3> 20 derniers</h3>
<div class="code">
	<ul>
		{{#each lastMeals}}
		<li>{{this.date}} {{this.time}} {{this.cook}} {{this.eaters}} {{this.food}} <a href="/meal/{{this.id}}">edit</a></li>
		{{/each}}
	</ul>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js" integrity="sha512-rmZcZsyhe0/MAjquhTgiUcb4d9knaFc7b5xAfju483gbEXTkeJRUMIPk6s3ySZMYUHEcjKbjLjyddGWMrNEvZg==" crossorigin="anonymous"></script>
<script type="text/javascript" src="/taskmaster/static/meals.js"></script>
</body>
</html>





